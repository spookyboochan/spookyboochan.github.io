    <!-- Link to jQuery on Google CDN-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>   
    <script>
        $(document).ready(function() {
            // Hide all hidden content initially
            $("#roots").hide();
            $("#trunk").hide();
            $("#bloom").hide();
            
            // Toggle functions for each button
            $("#button-roots").click(function() {
                $("#roots").fadeToggle(800);
                
                // Extra animation for desktop view
                if ($(window).width() >= 768) {
                    $(".initial-content").toggleClass("shifted");
                }
            });
            
            $("#button-trunk").click(function() {
                $("#trunk").slideToggle(800);
            });
            
            $("#button-bloom").click(function() {
                $("#bloom").fadeToggle(800);
                // When bloom is revealed, add a subtle animation to the main title
                $("h1").toggleClass("highlighted");
            });
            
            // Add some CSS classes dynamically
            $("h1").hover(function() {
                $(this).css("color", "#4caf50");
            }, function() {
                $(this).css("color", "#2c5e35");
            });
            
            // Make the entire experience more interactive
            $(".button-container button").hover(function() {
                $(this).css("letter-spacing", "1px");
            }, function() {
                $(this).css("letter-spacing", "normal");
            });
        });
    </script>
